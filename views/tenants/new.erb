<h1>Tenant New</h1>

<form method='post' action='/tenants'>

  <label for="apartment[address]">Addresses</label>
  <select name='apartment[address]'>
  <% @apartments.each do |apt| %>
    <option value="<%= apt.address %>"><%= apt.address %></option>
  <% end %>
  </select><br>

  <label for="tenant[name]">Name</label>
  <input type='text' name='tenant[name]' placeholder="Bill"><br>

  <label for="tenant[age]">Age</label>
  <input type='text' name='tenant[age]' placeholder="32"><br>

  <label for="tenant[gender]">Gender</label>
  <input type='text' name='tenant[gender]' placeholder="Male"><br>

  <input type='submit' value="Create">
</form>
